{
  "manifest_version": 2,
  "name": "RSS Tag Theme Analyzer",
  "version": "1.0",
  "description": "Select text and submit it to the API for processing",
  "permissions": [
    "tabs",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Submit Selected Text"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
